mixin link(href)
	if !href
		a(href="javascript:void(0)")&attributes(attributes)
			if block
				block
	else
		a(href=href)&attributes(attributes)
			if block
				block

mixin img(src, alt)
	if !alt
		img(src=src, alt="")&attributes(attributes)
		if block
			block
	else
		img(src=src, alt=alt)&attributes(attributes)
		if block
			block

mixin picture(src, pc_src, sp_src, alt)
	picture
		source(media='(max-width: 768px)' srcset=sp_src)
		source(media='(max-width: 1440px)' srcset=pc_src)
		if !alt
			img.w-100(src=src, alt="")&attributes(attributes)
		else
			img.w-100(src=src, alt=alt)&attributes(attributes)

mixin titCont(nCol, text, className)
	hgroup.text-center.tit.aos-init(rel="reScroll", data-aos="fade-up", data-aos-duration="400", data-aos-delay="300")(class= className)
		if nCol == 0
			h2.tit__txt.text-des= text
		else
			h2.tit__txt.text-white= text
		hr.tit__line

mixin listItem(tit, subTit, text, price)
	.item-cont
		h3.mb-1.item__tit= tit
		h4.mb-3.mb-md-4.item__subTit= subTit
		p.item__txt= text
		p.text-right.item__price= price
mixin item(stt, src, tit, subTit, text, price)
	if stt == "col1"
		.item.item__1
			.container
				.row
					.col-md-6.aos-init(rel="reScroll", data-aos="zoom-in", data-aos-duration="400", data-aos-delay="300"): img.w-100(src=src, alt=tit)&attributes(attributes)
					.col-md-6.aos-init(rel="reScroll", data-aos="fade-up", data-aos-duration="400", data-aos-delay="300").d-flex.align-items-center
						+listItem(tit, subTit, text, price)
	else if stt == "col2"
		.col-md-6
			.row.justify-content-md-center
				p.col-md-8.mb-5.aos-init(rel="reScroll", data-aos="zoom-in", data-aos-duration="400", data-aos-delay="300"): img.w-100(src=src, alt=tit)&attributes(attributes)
				.col-12.aos-init(rel="reScroll", data-aos="fade-up", data-aos-duration="400", data-aos-delay="300")
					+listItem(tit, subTit, text, price)